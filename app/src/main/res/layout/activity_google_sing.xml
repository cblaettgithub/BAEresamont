<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chbla.ba_eresamont.Activity.GoogleSingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="346dp"
                android:layout_marginTop="700px"
                android:layout_weight="1"
                android:text="TextView"
                tools:text="More Information about Health and Sickness, Tipps for Walking, Hiking, Mountains, Heart, Conditions" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_marginTop="70px"
            app:srcCompat="@drawable/bellevue_0014" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/status_textview"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="100px"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14sp"
            android:theme="@style/AlertDialog.AppCompat"
            android:title="Welcome to BA Erasomont"
            android:visibility="visible"
            tools:text="e-Res@mont Information" />
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="600px"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:title="Sign out"
            tools:text="Sign Out" />

    </LinearLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity=""
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logohessovalaisfooter"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

</FrameLayout>
